	$tahun=$_GET['th'];

	
	$sql = "SELECT * FROM data_jamaah 
	INNER JOIN status_jamaah ON data_jamaah.id_status=status_jamaah.id_status INNER JOIN 
	kecamatan ON data_jamaah.id_kecamatan=kecamatan.id_kecamatan INNER JOIN kabupaten ON kecamatan.id_kabupaten=kabupaten.id_kabupaten ";
	$sql.= "where tahun = '".$tahun."' ORDER BY no_porsi";
	$qr2 = mysql_query($sql);
	$i = 1;
	while ($row2 = mysql_fetch_array($qr2)){
		$data[$i]=array('no' => $i,
					'nama_jamaah' => $row2['nama_jamaah'],
