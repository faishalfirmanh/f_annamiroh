					'tgl_porsi' => $row2['tgl_porsi'],
					'tgl_tempo' => $row2['tgl_tempo'],
					'no_porsi' => $row2['no_porsi'],
					'bank' => $row2['bank'],
					'status' => $row2['status'],
					'tahun' => $row2['tahun']);
					 $i++;
	}
	
